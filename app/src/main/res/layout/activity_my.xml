<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/fog"
    tools:context=".MyActivity">

    <TextView
        android:text="@string/hello_world"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="please input money :"
        android:textSize="20dp"
        android:id="@+id/inputmoney"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="like 20.23"
        android:id="@+id/editText"
        android:layout_below="@+id/inputmoney"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK! ^.^ "
        android:id="@+id/button"
        android:layout_below="@+id/inputmoney"
        android:layout_toRightOf="@+id/inputmoney"
        android:layout_toEndOf="@+id/inputmoney"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tip rate"
        android:id="@+id/textView5"
        android:layout_below="@+id/inputmoney"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15% :"
        android:textSize="15dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/inputmoney"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"

        android:layout_marginTop="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:hint="tips"
        android:id="@+id/textView4"
        android:layout_below="@+id/inputmoney"
        android:layout_toRightOf="@+id/inputmoney"
        android:layout_toEndOf="@+id/inputmoney"
        android:layout_marginTop="100dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:hint="money"
        android:id="@+id/moneyview1"
        android:layout_below="@+id/inputmoney"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/inputmoney"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        />



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="1dp"
        android:paddingRight="16dp"
        android:id="@+id/linear1"
        android:orientation="horizontal"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tip rate            "
            android:id="@+id/tiprate2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20% :                   "
            android:id="@+id/tip2"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="tips"
            android:id="@+id/output2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="money"
            android:id="@+id/moneyview2"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            />


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="1dp"
        android:paddingRight="16dp"
        android:paddingTop="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tip rate            "
            android:id="@+id/tiprate3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30% :                   "
            android:id="@+id/tip3"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="tips"
            android:id="@+id/output3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="money"
            android:id="@+id/moneyview3"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            />


    </LinearLayout>


</RelativeLayout>
